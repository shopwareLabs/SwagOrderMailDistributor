<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="SwagOrderMailDistributor\OrderMailDistributionDefinition">
            <tag name="shopware.entity.definition"/>
        </service>

        <service id="SwagOrderMailDistributor\RuleMailListener">
            <argument type="service" id="order_mail_distribution.repository"/>
            <argument type="service" id="Shopware\Core\Content\MailTemplate\Service\MailService"/>
            <argument type="service" id="SwagOrderMailDistributor\MailTemplateLoader"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="SwagOrderMailDistributor\MailTemplateLoader">
            <argument type="service" id="mail_template.repository"/>
        </service>

    </services>
</container>
